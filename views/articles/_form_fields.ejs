<div class="form-group">
  <label for="title">Title</label>
  <input type="text" name="title" id="title" class="form-control" required value="<%=article.title%>"/>
</div>

<div class="form-group">
    <label for="description">Description</label>
    <textarea type="text" name="description" id="description" class="form-control" ><%=article.description%></textarea>
  </div>


<div class="form-group">
    <label for="markdown">Markdown</label>
    <textarea type="text" name="markdown" id="markdown" class="form-control" required><%=article.markdown%></textarea>
</div>

<a href="/" class="btn btn-secondary">Cancel</a>

<button type="submit" class="btn btn-primary">Save</button>